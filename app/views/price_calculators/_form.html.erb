<div class='container'>
  <div class='row'>
    <%= simple_form_for(price_calculator, html: { class: "text-white form-horizontal col-sm-6" }) do |form| %>
      <% if price_calculator.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(price_calculator.errors.count, "ошибка", "ошибки", "ошибок") %> не позволили сохранить данные:</h4>
          <ul>
            <% price_calculator.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.association :apartment_number, label: false, as: :hidden %>
      </div>

      <div class="mb-3">
        <%= form.input :price_per_square, label: "Цена за квадратный метр", input_html: { class: "form-control shadow" } %>
      </div>

      <div class="mb-3 d-flex justify-content-between">
        <%= form.input :first_payment_in_cash, label: "Первоначальный взнос (наличные)", input_html: { class: "form-control shadow" } %>
        <%= form.input :first_payment_in_percent, label: "Первоначальный взнос (%)", input_html: { class: "form-control shadow" } %>
      </div>

      <div class="mb-3">
      </div>

      <div class="mb-3">
        <%= form.input :number_of_months, label: "Количество месяцев", input_html: { class: "form-control shadow" } %>
      </div>

      <div class="form-group">
        <div class="col-md-8">
          <%= form.button :submit, "Далее", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
