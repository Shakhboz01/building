<h2 class="text-center mb-4 text-white">Войти</h2>

<div class="container text-white">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
        <div class="form-inputs">
          <div class="mb-3">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { class: "form-control", placeholder: "Введите ваш email", autocomplete: "email" },
                        label: "Электронная почта" %>
          </div>
          <div class="mb-3">
            <%= f.input :password,
                        required: false,
                        input_html: { class: "form-control", placeholder: "Введите ваш пароль", autocomplete: "current-password" },
                        label: "Пароль" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3">
              <%= f.input :remember_me,
                          as: :boolean,
                          label: "Запомнить меня",
                          input_html: { class: "form-check-input" },
                          label_html: { class: "form-check-label" } %>
            </div>
          <% end %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Войти", class: "btn btn-primary w-100 mb-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
