<h1 class='text-center'><%= @block.name %></h1>
<div class="building">
  <% @block.floors.order(number: :asc).each do |floor| %>
    <div class="floor">
      <div class="floor-label text-canter">Floor <%= floor.number %></div>
      <div class="apartments">
        <% floor.apartments.each do |apartment| %>
          <%= link_to apartment do %>
            <div class="apartment <%= apartment.comment.present? ? 'reserved' : 'available' %>">
              <%= apartment.apartment_number.number %>
              <% if apartment.comment.present? %>
                <div class="comment"><%= apartment.comment %></div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
  <div class="floor">
    <div class="floor-label text-canter"></div>
    <div class="apartments">
      <% @block.apartment_numbers.each do |apartment_number| %>
        <div class="apartment">
          <%= apartment_number.number %>
        </div>
      <% end %>
    </div>
  </div>
</div>
